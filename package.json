{
  "name": "hapijs-bootstrap",
  "version": "0.0.1",
  "description": "This is a simple HapiJS bootstrap project.",
  "main": "server.js",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "start": "babel-node server.js --presets es2015,stage-2"
  },
  "engines": {
    "node": "6.5.x",
    "npm": "3.10.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tresmo/wilo__tippspiel--backend.git"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100
    }
  },
  "dependencies": {
    "bcrypt": "^0.8.7",
    "bluebird": "^3.4.4",
    "boom": "^4.0.0",
    "hapi": "^15.0.2",
    "hapi-swagger": "^7.1.0",
    "hat": "0.0.3",
    "hoek": "^4.0.2",
    "inert": "^4.0.2",
    "joi": "^9.0.4",
    "lodash": "^4.15.0",
    "mongoose": "^4.5.10",
    "mongoose-unique-validator": "^1.0.2",
    "node-env-file": "^0.1.8",
    "uuid": "^2.0.2",
    "vision": "^4.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-2": "^6.13.0"
  }
}
